---
import Post from './../pages/index.astro'
export interface Props {
  post: Post;
}
const { post } = Astro.props;

function formatDate(date) {
  return new Date(date).toUTCString().replace(/(\d\d\d\d) .*/, '$1');
}
---

<div class="flex flex-col rounded-lg shadow-lg overflow-hidden">
  <div class="flex-shrink-0">
    <img class="h-48 w-full object-cover" src={post.image} alt="">
  </div>
  <div class="flex-1 bg-gray-800 p-6 flex flex-col justify-between">
    <div class="flex-1">
      <a href={post.url} class="block mt-2">
        <p class="text-xl font-semibold text-gray-100">
          {post.title}
        </p>
        <time class="text-gray-300" datetime={post.date}>{formatDate(post.date)}</time>
        <p class="mt-3 text-base text-gray-400">
          {post.description}
        </p>
      </a>
    </div>
  </div>
</div>
